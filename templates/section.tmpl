<div id="modalOverlay" class="subsection-modal-overlay">
    ${for(subsectionsData)}
        ${it:modal.tmpl()}
    ${endfor}
</div>

<div id="nonTextContent" class="book-section-non-text-content">
    <a href="${prevSection}.html" class="book-page-nav" data-nav="prev">&#8249;</a>
    <div class="book-section-video-container">

        ${if(vidMetadata.sliderImgName)}
            ${vidMetadata:toggleImgVid.tmpl()}
            ${vidMetadata:slider.tmpl()}
        ${endif}

        ${vidMetadata:player.tmpl()}

        ${if(offline)}
        ${else}
            ${vidMetadata:quality-changer-mobile.tmpl()}
        ${endif}
    </div>
    <a href="${nextSection}.html" class="book-page-nav" data-nav="next">&#8250;</a>
</div>

<div id="textContent" class="dark-background-text book-section-text">
    <div class="book-section-text-margins book-section-title book-section-text-header">
        <button id="shelfButton" class="dark-background-text book-section-text-close-button" onclick="shelfText(this)">&#8250;&#8250; Text</button>
        <div class="book-section-text-divider"></div>
        <h1>${title}</h1>
    </div>
    <div class= "book-text-content book-section-text-margins book-section-text-material ${if(media)}book-section-summary-material${endif}" tabindex="0">
        ${body}
    </div>
    ${if(videoTitle)}
        ${vidMetadata:vid-citation.tmpl()}
    ${endif}
    ${if(subsectionsData)}
        <div class="book-section-learn-more">
            <h1 class="book-section-text-header">Learn More:</h1>
            <div class="book-section-learn-more-buttons">
                ${for(subsectionsData)}
                    <button type="button" value="${it.id}" onclick="showModal(this)" class="main-color-background">${it.title}</button>
                ${endfor}
            </div>
        </div>
    ${endif}
</div>
<button tabindex="-1" id="unshelfButton" class="dark-background-text book-section-text-open-button" onclick="openText(this)">&#8249;&#8249; Text</button>