<div id="modalOverlay" class="subsection-modal-overlay">
    ${for(subsectionsData)}
        ${it:modal.tmpl()}
    ${endfor}
</div>

<button tabindex="-1" id="unshelfButton" class="dark-background-text book-section-text-open-button" onclick="openText(this)">&#8249;&#8249; Text</button>

<div id="nonTextContent" class="book-section-non-text-content">
    <a href="${prevSection}.html" class="book-page-nav" data-nav="prev">&#8249;</a>
    <div class="book-section-video-container">

        ${vidMetadata:toggleImgVid.tmpl()}

        <div id="fullBackground-${playerId}" class="book-section-comparison-slider-fullscreen-container" data-state="initial">
            <div class="book-section-comparison-slider-container" data-player="${playerId}">
                <img class="book-section-comparison-before" src="img/comparissons/2_1_before.jpg">
                <div class="book-section-comparison-after"></div>
                <input class="book-section-comparison-range sr-only" type="range" value="50" max="100">
                <div class="book-section-comparison-slider">
                    <div class="book-section-comparison-button">
                        ${svg/noun_Triangle.svg()}
                        ${svg/noun_Triangle.svg()}
                    </div>
                </div>
                <button id="compExitFull-${playerId}" class="book-section-comparison-control-button book-section-comparison-exit-fullscreen" data-player="${playerId}">${svg/noun_X.svg()}</button>
            </div>
            <button id="compEnterFull-${playerId}" class="book-section-comparison-control-button book-section-comparison-go-fullscreen" data-player="${playerId}">${svg/noun_Fullscreen.svg()}</button>
        </div>

        ${vidMetadata:player.tmpl()}

        ${if(offline)}
        ${else}
            ${vidMetadata:quality-changer.tmpl()}
        ${endif}
    </div>
    <a href="${nextSection}.html" class="book-page-nav" data-nav="next">&#8250;</a>
</div>

<div id="textContent" class="dark-background-text book-section-text">
    <div class="book-section-text-margins book-section-title book-section-text-header">
        <button class="dark-background-text book-section-text-close-button" onclick="shelfText(this)">&#8250;&#8250; Text</button>
        <div class="book-section-text-divider"></div>
        <h1>${title}</h1>
    </div>
    <div class= "book-text-content book-section-text-margins book-section-text-material ${if(media)}book-section-summary-material${endif}" tabindex="0">
        ${body}
    </div>
    ${if(videoTitle)}
        ${vidMetadata:vid-citation.tmpl()}
    ${endif}
    ${if(subsectionsData)}
        <div class="book-section-learn-more">
            <h1 class="book-section-text-header">Learn More:</h1>
            <div class="book-section-learn-more-buttons">
                ${for(subsectionsData)}
                    <button type="button" value="${it.id}" onclick="showModal(this)" class="main-color-background">${it.title}</button>
                ${endfor}
            </div>
        </div>
    ${endif}
</div>