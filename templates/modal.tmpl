<div class="subsection-modal-container" id="${it.id}" data-player="${it.playerId}">
    <button class="modal-exit-button-mobile" onclick="closeModalMobile(this)">&#10005;</button>
    ${if(it.video)}

        ${it:toggleImgVid.tmpl()}

        ${it:slider.tmpl()}

        ${it:player.tmpl()}
    ${elseif(it.graphic)}
        <img class="subsection-modal-img" src="img/schematics/${it.graphic}">
    ${endif}

    ${it:vid-citation.tmpl()}
    
    ${if(it.video)}
        ${if(offline)}
        ${else}
            ${it:quality-changer.tmpl()}
        ${endif}
    ${endif}
    <div class="subsection-modal-text" tabindex="-1">
        <h1>${it.title}</h1>
        <div class="book-text-content">
            ${it.html}
        </div>
    </div>
</div>