<div id="${it.id}" class="modal ${if(it.feedback)}modal--feedback${endif} modal--hidden">
    ${if(it.treeViewerFsConfirm)}${else}
        <button class="modal__exit-btn">
            <div class="modal__exit-btn-icon">${svg/x.svg()}</div>
        </button>
    ${endif}

    ${if(it.hasMainMediaViewer)}
        ${it:media-viewer.tmpl()}
    ${endif}

    ${if(it.species)}
        ${it:section/vid-citation.tmpl()}
    ${elseif(it.sources)}
        ${it:section/vid-citation.tmpl()}
    ${endif}

    ${if(offline)}
    ${else}
        ${if(it.viewer)}
            ${it.viewer:media-viewer.tmpl()}
        ${endif}
    ${endif}

    ${if(it.feedback)}
        ${appendix/feedback.tmpl()}
    ${elseif(it.treeViewerFsConfirm)}
        ${appendix/tree-viewer-fs-confirm.tmpl()}
    ${else}
        <div class="modal__content-container" tabindex="-1">
            ${it:section/narration-player.tmpl()}
            <button class="modal__toggle-narration-btn" aria-label="Open narration player">
                <div class="modal__toggle-narration-btn-icon modal__toggle-narration-btn-show-icon">${svg/sound.svg()}</div>
                <div class="modal__toggle-narration-btn-icon modal__toggle-narration-btn-icon--hidden modal__toggle-narration-btn-hide-icon">${svg/mute.svg()}</div>
            </button>
            <div class="modal__text-container">
                <h1 class="modal__header">${it.title}</h1>
                <div class="modal__text-content">
                    ${it.html}
                </div>
            </div>
        </div>
    ${endif}
</div>