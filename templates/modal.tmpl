<div id="${it.id}" class="modal modal--hidden">
    <button class="modal__exit-btn">
        <div class="modal__exit-btn-icon">${svg/x.svg()}</div>
    </button>

    ${if(it.hasMainMediaViewer)}
        ${it:media-viewer.tmpl()}
    ${endif}

    ${if(it.species)}
        ${it:vid-citation.tmpl()}
    ${elseif(it.sources)}
        ${it:vid-citation.tmpl()}
    ${endif}

    ${if(offline)}
    ${else}
        ${if(it.viewer)}
            ${it.viewer:media-viewer.tmpl()}
        ${endif}
    ${endif}

    <div class="modal__content-container">
        ${it:narration-player.tmpl()}
        <button class="modal__toggle-narration-btn">
            <div class="modal__toggle-narration-btn-icon modal__toggle-narration-btn-show-icon">${svg/sound.svg()}</div>
            <div class="modal__toggle-narration-btn-icon modal__toggle-narration-btn-icon--hidden modal__toggle-narration-btn-hide-icon">${svg/mute.svg()}</div>
        </button>
        <div class="modal__text-container" tabindex="-1">
            <h1 class="modal__header">${it.title}</h1>
            <div class="modal__text-content">
                ${it.html}
            </div>
        </div>
    </div>
</div>