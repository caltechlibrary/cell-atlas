<div class="subsection-modal-container" id="${it.id}" data-player="${it.playerId}">
    <button class="modal-exit-button-mobile" onclick="closeModalMobile(this)">&#10005;</button>
    ${if(it.video)}

        ${it:toggleImgVid.tmpl()}

        <div id="fullBackground-${it.playerId}" class="book-section-comparison-slider-fullscreen-container" data-state="initial">
            <div class="book-section-comparison-slider-container" data-player="${it.playerId}" data-modal="true">
                <img class="book-section-comparison-before" src="img/comparissons/2_1_before.jpg">
                <div class="book-section-comparison-after" data-modal="true"></div>
                <input class="book-section-comparison-range sr-only" type="range" value="50" max="100">
                <div class="book-section-comparison-slider">
                    <div class="book-section-comparison-button">
                        ${svg/noun_Triangle.svg()}
                        ${svg/noun_Triangle.svg()}
                    </div>
                </div>
                <button id="compExitFull-${it.playerId}" class="book-section-comparison-control-button book-section-comparison-exit-fullscreen" data-player="${it.playerId}">${svg/noun_X.svg()}</button>
            </div>
            <button id="compEnterFull-${it.playerId}" class="book-section-comparison-control-button book-section-comparison-go-fullscreen" data-player="${it.playerId}">${svg/noun_Fullscreen.svg()}</button>
        </div>

        <div class="book-section-video-player" data-player="${it.playerId}">
            <video id=${it.playerId} ${if(it.doi)}doi="${it.doi}"${endif} data-file="${it.video}" poster="img/thumbnails/${it.thumbnail}.jpg" ${if(offline)}${else}crossorigin${endif}>
                ${if(offline)}
                    <source src="videos/${it.video}">
                ${endif}
                There was an error loading the video.
            </video>
            <canvas id="${it.playerId}-videoScrubCanvas" class="book-section-video-player-scrub-canvas"></canvas>
            <canvas id="${it.playerId}-videoPaintCanvas" class="book-section-video-player-paint-canvas"></canvas>
            <div id="${it.playerId}-videoControls" class="book-section-video-player-controls">
                <div class="book-section-video-player-controls-buttons">
                    <button id="${it.playerId}-playPauseButton" type="button" data-state="play"></button>
                    <span id="${it.playerId}-videoTimeStatus" class="book-section-video-player-time">0:00</span>
                    <button id="${it.playerId}-fullScreenButton" type="button" data-state="go-fullscreen"></button>
                </div>
                <input type="range" id="${it.playerId}-seekBar" value="0" max="100">
            </div>
        </div>
    ${elseif(it.graphic)}
        <img class="subsection-modal-img" src="img/schematics/${it.graphic}">
    ${endif}

    ${it:vid-citation.tmpl()}
    
    ${if(it.video)}
        ${if(offline)}
        ${else}
            ${it:quality-changer.tmpl()}
        ${endif}
    ${endif}
    <div class="subsection-modal-text" tabindex="-1">
        <h1>${it.title}</h1>
        <div class="book-text-content">
            ${it.html}
        </div>
    </div>
</div>