<div class="video-player ${if(it.isSection)}video-player--main-section${else}video-player--subsection${endif}" data-doi="${it.doi}" data-vid-name="${it.vidName}">
    <video class="video-player__video ${if(it.isSection)}video-player__video--main-section${else}video-player__video--subsection${endif}" poster="https://www.cellstructureatlas.org/img/thumbnails/${it.thumbnail}.webp" width="1920px" height="1080px" muted crossorigin playsinline>
        <source>
        Your browser does not support the video tag.
    </video>
    <canvas class="video-player__scrub-canvas video-player__scrub-canvas--hidden"></canvas>
    <button class="video-player__playback-btn-mobile">
        <div class="video-player__playback-btn-mobile-icon video-player__playback-btn-mobile-play-icon">${svg/play.svg()}</div>
        <div class="video-player__playback-btn-mobile-icon video-player__playback-btn-mobile-pause-icon video-player__playback-btn-mobile-icon--hidden">${svg/pause.svg()}</div>
    </button>
    <div class="video-player__controls-container">
        <div class="video-player__top-controls-container">
            <button class="video-player__control-btn video-player__control-btn-playback">
                <div class="video-player__control-icon video-player__control-icon-play">${svg/play.svg()}</div>
                <div class="video-player__control-icon video-player__control-icon-pause video-player__control-icon--hidden">${svg/pause.svg()}</div>
            </button>
            <span class="video-player__time-display">0:00</span>
            <div class="video-player__quality-changer">
                <button class="video-player__quality-changer-open-btn">
                    <span class="video-player__quality-changer-open-btn-text"></span>
                    <div class="video-player__quality-changer-open-btn-icon">${svg/expand.svg()}</div>
                </button>
                <div class="video-player__quality-options-menu video-player__quality-options-menu--hidden">
                    <label class="video-player__quality-option">
                        <span class="video-player__quality-option-title">1080p</span>
                        <span class="video-player__quality-option-input-container">
                            <input class="video-player__quality-option-input" type="radio" name="${it.vidName}" value="1080">
                            <span class="video-player__quality-option-check-icon">${svg/check.svg()}</span>
                        </span>
                    </label>
                    <label class="video-player__quality-option">
                        <span class="video-player__quality-option-title">480p</span>
                        <span class="video-player__quality-option-input-container">
                            <input class="video-player__quality-option-input" type="radio" name="${it.vidName}" value="480">
                            <span class="video-player__quality-option-check-icon">${svg/check.svg()}</span>
                        </span>
                    </label>
                </div>
            </div>
            <button class="video-player__control-btn video-player__control-btn-fs video-player__control-btn-fs video-player__control-btn-fs--hidden-mobile">
                <div class="video-player__control-icon video-player__control-icon-fs">${svg/fullscreen.svg()}</div>
                <div class="video-player__control-icon video-player__control-icon-exit-fs video-player__control-icon--hidden">${svg/exit-fullscreen.svg()}</div>
            </button>
        </div>
        <input class="video-player__seek-bar" type="range" value="0" max="1000">
    </div>
</div>