<div class="video-citation">
    ${if(it.species)}
        <a href="C-phylogenetic-tree.html"><i>${it.species}</i></a>
    ${endif}

    <span>
        ${if(it.source)}Source:${elseif(it.collector)}Collected by:${endif} 
        ${if(it.collectorProfile)}
            <a href="B-scientist-profiles.html#${it.collectorId}">${it.collector}</a>
        ${else}
            <span class="video-citation-value">${it.collector}</span>
        ${endif}
    </span>

    ${if(it.doi)}
        <span>DOI: <a href="https://doi.org/${it.doi}" target="_blank">${it.doi}</a></span>
    ${elseif(it.structure)}
        <span>Structure:
            <span class="video-citation-value">${it.structure}</span> 
            ${if(it.viewerDemo)}<span class="video-citation-value viewer-link" data-pdb="${it.pdb}">[Open In Viewer]</span>${endif}
        </span>
    ${endif}
</div>