<div id="fullBackground-${it.playerId}" class="book-section-comparison-slider-fullscreen-container" data-state="initial">
    ${if(viewerDemo)}
        ${it:molstar.tmpl()}
    ${else}
        <div class="book-section-comparison-slider-container" data-img-name="${it.sliderImgName}" data-player="${it.playerId}" ${if(it.html)}data-modal="true"${endif}>
            <img class="book-section-comparison-load-failed" src="img/noun_BrokenImage.svg">
            <img class="book-section-comparison-before">
            <div class="book-section-comparison-after"></div>
            <input class="book-section-comparison-range sr-only" type="range" value="50" max="100">
            <div class="book-section-comparison-slider">
                <div class="book-section-comparison-button">
                    ${svg/noun_Triangle.svg()}
                    ${svg/noun_Triangle.svg()}
                </div>
            </div>
            <button id="compMinimizeMobile-${it.playerId}" class="book-section-comparison-control-button book-section-comparison-exit-fullscreen" data-player="${it.playerId}">${svg/noun_X.svg()}</button>
        </div>
        <button id="compMinimizeDesktop-${it.playerId}" class="book-section-comparison-control-button book-section-comparison-exit-fullscreen-desktop" data-player="${it.playerId}">${svg/noun_X.svg()}</button>
        <button id="compEnlarge-${it.playerId}" class="book-section-comparison-control-button book-section-comparison-go-fullscreen" data-player="${it.playerId}">${svg/noun_Fullscreen.svg()}</button>
    ${endif}
</div>