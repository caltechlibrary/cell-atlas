${if(chapter)}
    ${if(prevSection)}
        <a href="${prevSection}.html" class="book-page-nav book-appendix-nav" data-nav="prev">&#8249;</a>
    ${else}
        <a class="book-page-nav hidden appendix-hidden">&#8249;</a>
    ${endif}
${endif}
<div class="dark-background-text book-appendix-page">
    ${if(appendixTypeAbout)}
        ${feedback.tmpl()}
    ${endif}
    <div class="book-appendix-inner">
        <h1>${if(chapter)}<span class="book-appendix-chapter-heading">${chapter}</span>${endif}${title}</h1>

        ${if(appendixTypeFeatures)}
            ${features.tmpl()}
        ${elseif(appendixTypeProfiles)}
            ${profiles.tmpl()}
        ${elseif(appendixTypeTree)}
            <div class="book-text-content">
                ${body}
            </div>
            ${for(speciesList)}
                <div class="book-appendix-tree-section-list" data-species="${speciesList.id}">
                    <h2 class="book-appendix-tree-section-title">${speciesList.species}</h2>
                    <div class="book-appendix-tree-section-content">
                        <h3 class="book-appendix-tree-section-subheader">Examples:</h3>
                        <ol class="book-appendix-tree-section-example-list">
                            ${for(speciesList.speciesObjs)}
                                <li><a href="${speciesList.speciesObjs.page}">${if(speciesList.speciesObjs.chapter)}${speciesList.speciesObjs.chapter}.${endif}${speciesList.speciesObjs.section} ${speciesList.speciesObjs.title}</a></li>
                            ${endfor}
                        </ol>
                    </div>
                </div>
            ${endfor}
            <div class="book-appendix-tree-viewer">
                <div class="book-appendix-tree-viewer-controls">
                    <button class="book-appendix-tree-viewer-zoom-in" id="treeZoomIn">${svg/noun_Plus.svg()}</button>
                    <div class="book-appendix-tree-viewer-controls-divider"></div>
                    <button class="book-appendix-tree-viewer-zoom-out" id="treeZoomOut">${svg/noun_Minus.svg()}</button>
                </div>
                ${svg/modifiedTree.svg()}
            </div>
        ${elseif(appendixTypeAbout)}
            ${about.tmpl()}
        ${elseif(appendixTypeReferences)}
            ${body}
        ${elseif(appendixTypeDownload)}
            <div class="book-text-content">
                ${body}
            </div>
            <div class="book-appendix-download">
                <a download rel="noopener" href="https://data.caltech.edu/tindfiles/serve/24b4c956-815e-44d1-9d07-2c6f3864066e/" class="landing-page-start-button">Download Edition 1.0 - full version</a>
                <a download rel="noopener" href="https://data.caltech.edu/tindfiles/serve/a5d7e41e-c67e-42d4-898f-0d8012ba8cd2/" class="landing-page-start-button">Download Edition 1.0 - light version</a>
            </div>
        ${endif}

    </div>
</div>
${if(chapter)}
    ${if(nextSection)}
        <a href="${nextSection}.html" class="book-page-nav book-appendix-nav book-appendix-nav-right" data-nav="next">&#8250;</a>
    ${else}
        <a class="book-page-nav hidden appendix-hidden">&#8250;</a>
    ${endif}
${endif}
